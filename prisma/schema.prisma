generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id                     String   @id @default(uuid())
  name                   String
  briefIntro             String?
  portfolioStatus        String?
  investmentDate         DateTime
  capitalInvested        Float
  initialShareholdingRatio Float?
  currentShareholdingRatio Float?
  investmentCost         Float?
  latestFinancingValuation Float?
  bookValue              Float?
  moic                   Float?
  documents              Document[]
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
}

model Document {
  id        String   @id @default(uuid())
  name      String
  type      String
  url       String
  isVisible Boolean  @default(true)
  description String?
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}
